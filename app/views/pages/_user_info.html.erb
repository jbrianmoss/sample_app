<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= h current_user.name %>
    </span>
    <span class="events">
      <%= pluralize(current_user.events.count, "events") %>
    </span>
  </a>
</div>
